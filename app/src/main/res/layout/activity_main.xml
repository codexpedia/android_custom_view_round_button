<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.customroundbuttonview.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <com.example.customroundbuttonview.RoundButtonView
        android:id="@+id/round_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:bgColor="#eee"
        app:borderColor="#bab7b7"
        app:textColor="#737070"
        app:cornerRadius="10.0"
        app:borderWidth="6"
        app:textSize="20sp"
        app:text="10.0 Radius"/>

    <com.example.customroundbuttonview.RoundButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:bgColor="#eee"
        app:borderColor="#abe0f1"
        app:textColor="#51cae6"
        app:cornerRadius="30.0"
        app:borderWidth="6"
        app:textSize="20sp"
        app:text="30.0 Radius"/>

    <com.example.customroundbuttonview.RoundButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:bgColor="#eee"
        app:borderColor="#eae68e"
        app:textColor="#e7cb11"
        app:cornerRadius="100.0"
        app:borderWidth="6"
        app:textSize="20sp"
        app:text="100.0 Radius"/>
</LinearLayout>
